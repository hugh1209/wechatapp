@import '../home/index.wxss';
.container {
    background-color: #F2f2f2;
}

view.text {
    display: flex;
    align-items: center;
    position: relative;
    padding: 10px 10px 10px 12px;
    font-size: 15px;
    color: #656565;
    background-color: #62BAE2;
}

view.text:before {
    position: absolute;
    display: block;
    content: ' ';
    left: -5px;
    width: 2px;
    height: 100%;
    background-color: #09bb07;
}

.line_flag {
    width: 3px;
    height: 100%;
    display: inline-block;
    background-color: #09bb07;
}

view.text text {
    margin-left: 10px;
    line-height: 18px;
}

.item {
    padding: 10px;
    background-color: #fff;
    color: #787878;
    border-top: 1px solid #eaeaea;
    border-bottom: 1px solid #eaeaea;
    margin: 1% 3%;
}

.item_middle {
    flex: 1;
    margin-left: 10px;
    padding-top: 5px;
    overflow: hidden;
    max-height: 20%;
}

.item_middle .title {
    font-size: 16px;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    line-height: 20px;
    max-height: 20px;
}
.item_middle .content {
    font-size: 14px;
    color: #666;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    line-height: 15px;
    max-height: 60px;
}

.item_middle .content_full {
    font-size: 14px;
    color: #666;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    line-height: 15px;
}

.item_middle .time {
    font-size: 12px;
    color: #666;
    line-height: 10px;
}