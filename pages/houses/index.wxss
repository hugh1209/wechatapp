@import '../home/index.wxss';
.container {
    background-color: #F2f2f2;
}

view.text {
    display: flex;
    align-items: center;
    position: relative;
    padding: 20rpx 20rpx 20rpx 24rpx;
    font-size: 15px;
    color: #656565;
    background-color: #62BAE2;
}

view.text:before {
    position: absolute;
    display: block;
    content: ' ';
    left: -10rpx;
    width: 4rpx;
    height: 100%;
    background-color: #09bb07;
}

.line_flag {
    width: 6rpx;
    height: 100%;
    display: inline-block;
    background-color: #09bb07;
}

view.text text {
    margin-left: 20rpx;
    line-height: 36rpx;
}

.item {
    padding: 20rpx;
    background-color: #fff;
    color: #787878;
    border-top: 1px solid #eaeaea;
    border-bottom: 1px solid #eaeaea;
    margin: 1% 3%;
}

.item_middle {
    flex: 1;
    margin-left: 20rpx;
    padding-top: 10rpx;
    overflow: hidden;
    max-height: 20%;
}

.item_middle .title {
    font-size: 32rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    line-height: 40rpx;
    max-height: 40rpx;
}
.item_middle .content {
    font-size: 28rpx;
    color: #666;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    line-height: 30rpx;
    max-height: 120rpx;
}

.item_middle .content_full {
    font-size: 28rpx;
    color: #666;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    line-height: 30rpx;
}

.item_middle  {
    font-size: 24rpx;
    color: #666;
    line-height: 20rpx;
}

.time{
    font-size: 20rpx;
    color: #666;
    line-height: 60rpx;
}