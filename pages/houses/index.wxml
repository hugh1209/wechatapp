<!--index.wxml-->
<view class="container">

    <block wx:for="{{items}}">
        <view class="flex item" data-index="{{index}}" bindtap="showalltext">
            <view class="flex_auto item_middle">
                <view><text class="{{selected === index? 'content_full' : 'content'}}">{{item.Content}}</text></view>
                <view><text class="time">{{item.Time}}</text></view>
            </view>
        </view>
    </block>
</view>
