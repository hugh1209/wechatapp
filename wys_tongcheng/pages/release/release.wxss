.menu_list .menu_icon image{
  width:100rpx;
  height:100rpx;
}

.menu_list .menu_text{
   font-size: 26rpx;
   height: 30rpx;
   line-height: 30rpx;
}




/*sheet 模拟*/
.drawer_text{
text-indent:1.2em;
padding:0 10rpx;

word-wrap:break-word;
word-break:break-all;
}
.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}  
  
/*content */  
.drawer_box {  
  width: 100%;  
  overflow: hidden;  
  position: fixed;  
  bottom:1px;  
  /* top:0; */
  left: 0;  
   max-height:900rpx;
  z-index: 1001;  
  background: #FAFAFA;  
  /* margin: -150px 0 0 0; */
  /* margin-bottom:0px; */
  border-radius: 3px;  
}  
  
.drawer_title{  
  padding:30rpx;  
  font: 30rpx "microsoft yahei";  
  text-align: center;
   border-bottom:1px solid #E8E8EA;
}
.btn_ok{  
  padding: 10px;  
  font: 30rpx "microsoft yahei";
  text-align: center;  
  border-top: 1px solid #E8E8EA;  
  color: #3CC51F;  
}