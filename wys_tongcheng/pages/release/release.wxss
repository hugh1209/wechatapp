/*首页列表*/
.menu_list{
  background: #ffffff; 
  width:100%;
  display:flex;
  flex-wrap:wrap;
  align-items:flex-start;
  justify-content:flex-start;
  /* margin:10rpx; */
 
}

.menu_list .menu_icon{
  width:25%;
  text-align: center;
  height: 160rpx;
  padding:10rpx 0;
  border-bottom:1px solid #EBEBEB;
  float:left;
  position:relative;

}

.menu_icon::after{
content:' ';
position:absolute;
border-right:1px solid #EBEBEB;
height:100%;
right:0px;
top:0px;
}

